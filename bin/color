#!/bin/bash -e

usage() {
  cat << EOF
Print colored message (if terminal supports colorings)

Parameters:
  -c --color COLOR_CODE   Use color with this code
  -n                      Do not print the trailing newline character
  -V --verbose            For debug purpose
  --                      STDIN pipe
  -h --help               Show this message

Subcommands:
  h or hightlight    MSG  Prints bold white
  w, warn or warning MSG  Prints bold yellow
  e, err or error    MSG  Prints bold red

EOF
}

message=""

_tput() {
  if test -t 1; then
    # shellcheck disable=SC2086,SC2048
    tput $*
  fi
}

finalize() {
  if test -t 1; then
    tput sgr0
  fi
}

echo="${echo:-"echo"}"

while test -n "$1"; do
  case $1 in
    -h | --help )
      usage
      exit ;;
    -V | --verbose )
      set -x
      shift; continue
    ;;
    -c | --color )
      _tput setaf "$1"
      shift
      shift; continue
    ;;
    -n )
      echo="echo -n"
      shift; continue
    ;;
    -b | --bold | b | bold )
      _tput bold
      shift; continue
    ;;
    w | warn | warning )
      _tput setaf 3
      _tput bold
      shift; continue
    ;;
    e | err | error )
      _tput setaf 1
      _tput bold
      shift; continue
    ;;
    h | highlight )
      _tput setaf 7
      _tput bold
      shift; continue
    ;;
    -- )
      message="$(< /dev/stdin)"
      break
    ;;
    * )
      message="$*"
      break
    ;;
  esac
done

trap finalize EXIT

$echo "$message"
