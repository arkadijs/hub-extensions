#!/bin/bash -e
# shellcheck disable=SC2046,SC2086

usage() {
  cat << EOF
Pulls component from git repostiroy:
  --all                pull all components (default)
  -c --component       only specific component (can repeat)
  --override           override existing component with git pull results

EOF
}

ARGS="--all"
while [ "$1" != "" ]; do
  case $1 in
    -c | --component )
      shift
      ARGS="$ARGS -c $1"
      ;;
    --override )
      ARGS="$ARGS --override"
      ;;
    -h | --help )
      usage
      exit
      ;;
  esac
  shift
done

if test $VERBOSE = "true"; then
  set -x
fi

if test -z "$HUB_FILES"; then
  echo "Error: cannot find stack definition files"
  exit 1
fi

echo "Configuring components:"
$(dirname $(dirname $0))/hub-component-download $ARGS
